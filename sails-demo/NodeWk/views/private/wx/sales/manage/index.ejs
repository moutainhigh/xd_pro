<header class="header navbar bg-white shadow">
  <div class="btn-group tool-button">
    <a class="btn btn-primary navbar-btn" href="/private/wx/sales/manage/add" data-pjax><i class="ti-plus"></i> 添加活动</a>
    <button class="btn btn-danger navbar-btn" onclick="delCheck()"><i class="ti-close"></i> 删除选中</button>
  </div>
</header>
<div class=panel-body style="padding-top: 50px;">
  <div class="table-responsive no-border">
    <input id="unitid" type="hidden">
    <table class="table table-bordered table-striped mg-t datatable">
      <thead>
      <tr>
        <th>活动名称</th>
        <th>活动类型</th>
        <th>公众号</th>
        <th>活动预算</th>
        <th>活动状态</th>
        <th>操作</th>
    </table>
  </div>
</div>
<div id="dialogDelete" class="modal fade bs-modal-sm" tabindex="-2" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">删除</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-xs-12">
            删除后无法恢复，确定删除吗？ <br/>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">取 消</button>
        <button id="ok" type="button" class="btn btn-primary" data-loading-text="正在删除...">确 定</button>
      </div>
    </div>
  </div>
</div>
<script language="JavaScript">
  var datatable;
  var types=<%-JSON.stringify(types)%>;
  var wxlist=<%-JSON.stringify(wxlist)%>;
  function initDatatable() {
    datatable = $('.datatable').DataTable({
      "dom": '<"toolbar">frtip',
      "searching": false,
      "processing": false,
      "serverSide": true,
      "select": true,
      "ordering": true,
      "language": {
        "url": "/plugins/datatables/cn.json"
      },
      "preDrawCallback": function () {
        sublime.showLoadingbar($(".main-content"));
      },
      "drawCallback": function () {
        sublime.closeLoadingbar($(".main-content"));
      },
      "ajax": {
        "url": "/private/wx/sales/manage/data",
        "type": "post",
        "data": function (d) {
        }
      },
      "order": [[0, "desc"]],
      "columns": [
        {"data": "name", "bSortable": true},
        {"data": "type", "bSortable": true},
        {"data": "wxid", "bSortable": false},
        {"data": "budget", "bSortable": true},
        {"data": "disabled", "bSortable": true}
      ],
      "columnDefs": [
        {
          "render": function (data, type, row) {
            for(var i=0;i<types.length;i++){
              var o=types[i];
              if(o.id+''==data)
                return o.name;
            }
            return '';
          },
          "targets": 1
        },
        {
          "render": function (data, type, row) {
            for(var i=0;i<wxlist.length;i++){
              var o=wxlist[i];
              if(o.id+''==data)
                return o.appname;
            }
            return '';
          },
          "targets": 2
        },
        {
          "render": function (data, type, row) {
            if (data) {
              return '<i id="disable_' + row.id + '" class="fa fa-circle text-danger ml5"></i>';
            } else {
              return '<i id="disable_' + row.id + '" class="fa fa-circle text-success ml5"></i>';
            }
          },
          "targets": 4
        },
        {
          "render": function (data, type, row) {
            return '<div class="btn-group"><button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">' +
              ' <i class="ti-settings"></i> <span class="ti-angle-down"></span></button><ul class="dropdown-menu" role="menu">' +
              '<li><a href="/private/wx/sales/manage/info/' + row.id + '" data-pjax>管理内容</a></li>' +
              '<li class="divider"></li>' +
              '<li><a href="/private/wx/sales/manage/edit/' + row.id + '" data-pjax>修改</a></li>' +
              '<li><a href="javascript:;" onclick="del(' + row.id + ')">删除</a></li>' +
              '<li class="divider"></li>' +
              '<li><a href="javascript:;" onclick="enableIt(' + row.id + ')">启用</a></li>' +
              '<li><a href="javascript:;" onclick="disableIt(' + row.id + ')">禁用</a></li>' +
              '</ul></div>';
          },
          "targets": 5
        }
      ]
    });
    datatable.on('click', 'tr', function () {
      $(this).toggleClass('selected');
    });
    $("#searchBtn").on('click', function () {
      datatable.ajax.reload();
    });
  }
  function enableIt(id) {
    $.post("/private/wx/sales/manage/enable/" + id, {}, function (data) {
      if (data.code == 0) {
        $("#disable_" + id).attr("class", "fa fa-circle text-success ml5");
      } else {
        Toast.error(data.msg);
      }
    }, "json");
  }
  function disableIt(id) {
    $.post("/private/wx/sales/manage/disable/" + id, {}, function (data) {
      if (data.code == 0) {
        $("#disable_" + id).attr("class", "fa fa-circle text-danger ml5");
      } else {
        Toast.error(data.msg);
      }
    }, "json");
  }
  function del(id) {
    var dialog = $("#dialogDelete");
    dialog.modal("show");
    dialog.find("#ok").unbind("click");
    dialog.find("#ok").bind("click", function (event) {
      var btn = $(this);
      btn.button("loading");
      $.post("/private/wx/sales/manage/delete/" + id, {}, function (data) {
        if (data.code == 0) {
          datatable.ajax.reload(null,false);
        } else {
          Toast.error(data.msg);
        }
        //重置按钮状态，关闭提示框
        btn.button("reset");
        dialog.modal("hide");
      }, "json");
    });
  }
  function delCheck() {
    var chks = datatable.rows('.selected').data();
    if (chks.length > 0) {
      var ids = [];
      $.each(datatable.rows('.selected').data(), function (i, n) {
        ids.push(n.id);
      });
      var dialog = $("#dialogDelete");
      dialog.modal("show");
      dialog.find("#ok").unbind("click");
      dialog.find("#ok").bind("click", function (event) {
        var btn = $(this);
        btn.button("loading");
        $.post("/private/wx/sales/manage/delete", {ids: ids}, function (data) {
          if (data.code == 0) {
            datatable.ajax.reload(null,false);
          } else {
            Toast.error(data.msg);
          }
          btn.button("reset");
          dialog.modal("hide");
        }, "json");
      });
    } else {
      Toast.warning("请先选择要删除的项！");
    }
  }
  $(function () {
    initDatatable();
  });
</script>
