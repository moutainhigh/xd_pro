<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

    <!-- 控制台输出 -->
	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %p [%c] - %m%n"/>
		</layout>
	</appender>
	
    <!-- 系统启动日志输出文件 -->
    <appender name="fileAppender" class="com.xiaodou.common.util.log.XdDailyRollingFileAppender">
		<param name="File" value="logs/system.log"/>
		<param name="DatePattern" value="'.'yyyy-MM"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %p [%c] - %m%n"/>
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>
	
	<!-- 异常日志 -->
	<appender name="errorAppender" class="com.xiaodou.common.util.log.XdDailyRollingFileAppender">
		<param name="File" value="logs/error.log"/>
		<param name="DatePattern" value="'.'yyyy-MM"/>
		<layout  class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d][%X{clientIP}] - %m%n"/>
	    </layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="ERROR" />
			<param name="LevelMax" value="ERROR" />
		</filter>
	</appender>
	
	<!-- debug日志输出文件 -->
	<appender name="debugAppender" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="logs/debug.log"/>
		<param name="MaxFileSize" value="50MB"/>
		<param name="MaxBackupIndex" value="0"/>
		<layout  class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d][%X{clientIP}] - %m%n"/>
	    </layout>
	    <filter class="org.apache.log4j.varia.LevelRangeFilter">
          <param name="LevelMin" value="INFO" />
          <param name="LevelMax" value="INFO" />
        </filter>
	</appender>
	
	

	
	<!--报警日志 appender -->
	<appender name="alarmAppender" class="com.xiaodou.common.util.log.XdDailyRollingFileAppender">
		<param name="File" value="logs/alarm.log"/>
		<param name="DatePattern" value="'.'yyyy-MM"/>
		<layout  class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d][%X{clientIP}] - %m%n"/>
	    </layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>
	
	
	<!--缓存日志 appender -->
	<appender name="cacheAppender" class="com.xiaodou.common.util.log.XdDailyRollingFileAppender">
		<param name="File" value="logs/cache.log"/>
		<param name="DatePattern" value="'.'yyyy-MM"/>
		<layout  class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d][%X{clientIP}] - %m%n"/>
	    </layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
		</filter>
	</appender>
	
	<!-- errorLogger -->
	<category name="errorLogger" additivity="true">  
		<level value="ERROR"/>
		<appender-ref ref="stdout"/>
		<appender-ref ref="errorAppender" />  
	</category>
	
	<!-- debugLogger -->
	<category name="debugLogger" additivity="true">  
	    <!--开发环境、测试环境下，可以将value设为DEBUG -->
	    <level value="DEBUG"/>
		<appender-ref ref="debugAppender"/>  
	</category>

	
	
	
	<!-- cacheLogger -->
    <category name="cacheLogger" additivity="true">  
		<level value="DEBUG"/>
		<appender-ref ref="cacheAppender" />  
	</category>
	
	<!-- 订单报警 Logger -->
    <category name="alarmLogger" additivity="true">  
		<level value="DEBUG"/>
		<appender-ref ref="alarmAppender" />  
	</category>

    <logger name="java.sql" additivity="true">
   		 <level value="DEBUG"/>
         <appender-ref ref="debugAppender" />
	</logger>	
	<logger name="com.apache.ibatis" additivity="true">
   		 <level value="DEBUG"/>
	     <appender-ref ref="debugAppender" />
	</logger>
	
	<logger name="org.mybatis" additivity="true">
   		 <level value="DEBUG"/>
	     <appender-ref ref="debugAppender" />
	</logger>
	
    <logger name="java.sql.Connection" additivity="true">
	    <level value="DEBUG"/>
	    <appender-ref ref="debugAppender" />
	</logger>

	<logger name="java.sql.Statement" additivity="true">
	   <level value="DEBUG"/>
	   <appender-ref ref="debugAppender" />
	</logger>
	
	<logger name="java.sql.PreparedStatement" additivity="true">
	   <level value="DEBUG"/>
	   <appender-ref ref="debugAppender" />
	</logger>
	
	<root>
	  <level value="DEBUG"/>
	  <appender-ref ref="stdout"/>
	  <appender-ref ref="fileAppender"/>
	</root>
	
</log4j:configuration>
